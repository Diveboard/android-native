<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scollview"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<RelativeLayout
	    android:id="@+id/parent_rl"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content">
	    <RelativeLayout
	        android:id="@+id/myBuddies_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
	        <TextView
		        android:id="@+id/myBuddies"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="My buddies"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"/>
	    </RelativeLayout>
	    <com.diveboard.util.ExpandableHeightGridView
		    android:layout_below="@id/myBuddies_rl"
		    android:id="@+id/gridViewBuddies"
		    style="@style/PhotoGridLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:columnWidth="@dimen/image_thumbnail_size"
		    android:horizontalSpacing="@dimen/image_thumbnail_spacing"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="@dimen/image_thumbnail_spacing" />
		<RelativeLayout
		    android:layout_below="@id/gridViewBuddies"
	        android:id="@+id/myOldBuddies_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
			<TextView
		        android:id="@+id/myOldBuddies"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="Add one of your past dive buddies"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"
		        />
		</RelativeLayout>
		<com.diveboard.util.ExpandableHeightGridView
		    android:layout_below="@id/myOldBuddies_rl"
		    android:id="@+id/gridView"
		    style="@style/PhotoGridLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:columnWidth="@dimen/image_thumbnail_size"
		    android:horizontalSpacing="@dimen/image_thumbnail_spacing"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="@dimen/image_thumbnail_spacing" />
		<RelativeLayout
		    android:layout_below="@id/gridView"
	        android:id="@+id/search_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
			<TextView
		        android:id="@+id/search"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="Or search and add buddies from"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"
		        />
		</RelativeLayout>
		<Spinner 
		    android:id="@+id/spinner"
		    android:layout_below="@id/search_rl"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    />
		<LinearLayout
		    android:id="@+id/search_global"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/spinner"
		    android:orientation="vertical">
			<LinearLayout 
			    android:id="@+id/search_global_diveboard"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:visibility="visible">
			    <LinearLayout
				    android:id="@+id/search_diveboard"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/search_diveboard_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Add a Diveboard buddy" />
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <LinearLayout
					    android:layout_height="wrap_content"
					    android:layout_width="match_parent"
					    android:orientation="horizontal">
					    <AutoCompleteTextView
					        android:id="@+id/search_diveboard_edit"
					        android:layout_height="wrap_content"
					        android:layout_width="match_parent"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:id="@+id/notify_diveboard"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:visibility="visible">
					<LinearLayout
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.5"
					    android:gravity="end"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/notify_diveboard_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Notify your buddy" />
				    </LinearLayout>
				    <LinearLayout
					    android:layout_weight="0.5"
					    android:layout_height="wrap_content"
					    android:layout_width="0dp"
					    android:orientation="horizontal">
					    <CheckBox 
					        android:id="@+id/notify_diveboard_checkbox"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"/>
					</LinearLayout>
				</LinearLayout>		    
			</LinearLayout>
		    
			
			<LinearLayout 
			    android:id="@+id/search_global_facebook"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:visibility="visible">
				<LinearLayout
				    android:id="@+id/search_facebook"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<LinearLayout
					    android:layout_width="match_parent"
					    android:layout_height="wrap_content"
					    android:gravity="center_horizontal"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/search_facebook_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Add a Facebook buddy" />
				    </LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:id="@+id/search_facebook"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
				    <LinearLayout
					    android:layout_height="wrap_content"
					    android:layout_width="match_parent"
					    android:orientation="horizontal">
					    <AutoCompleteTextView
					        android:id="@+id/search_facebook_edit"
					        android:layout_height="wrap_content"
					        android:layout_width="match_parent"/>
					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
			
			
			<LinearLayout 
			    android:id="@+id/search_global_email"
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical"
			    android:visibility="visible">
				<LinearLayout
				    android:id="@+id/search_name"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<LinearLayout
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.5"
					    android:gravity="end"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/search_name_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Buddy name" />
				    </LinearLayout>
				    <LinearLayout
					    android:layout_weight="0.5"
					    android:layout_height="wrap_content"
					    android:layout_width="0dp"
					    android:orientation="horizontal">
					    <EditText
					        android:id="@+id/search_name_edit"
					        android:layout_height="wrap_content"
					        android:layout_width="match_parent"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:id="@+id/search_email"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<LinearLayout
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.5"
					    android:gravity="end"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/search_email_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Buddy email (optional)" />
				    </LinearLayout>
				    <LinearLayout
					    android:layout_weight="0.5"
					    android:layout_height="wrap_content"
					    android:layout_width="0dp"
					    android:orientation="horizontal">
					    <EditText
					        android:id="@+id/search_email_edit"
					        android:inputType="textEmailAddress"
					        android:layout_height="wrap_content"
					        android:layout_width="match_parent"/>
					</LinearLayout>
				</LinearLayout>
				<LinearLayout
				    android:id="@+id/notify_email"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal">
					<LinearLayout
					    android:layout_width="0dp"
					    android:layout_height="wrap_content"
					    android:layout_weight="0.5"
					    android:gravity="end"
					    android:layout_gravity="center_vertical"
					    android:orientation="horizontal" >
					    <TextView
					        android:id="@+id/notify_email_text"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:text="Notify your buddy" />
				    </LinearLayout>
				    <LinearLayout
					    android:layout_weight="0.5"
					    android:layout_height="wrap_content"
					    android:layout_width="0dp"
					    android:orientation="horizontal">
					    <CheckBox 
					        android:id="@+id/notify_email_checkbox"
					        android:layout_width="wrap_content"
					        android:layout_height="wrap_content"
					        android:enabled="false"/>
					</LinearLayout>
				</LinearLayout>

				<LinearLayout
				    android:id="@+id/add_email"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:orientation="horizontal"
				    android:visibility="visible" >
				    <LinearLayout
					    android:layout_width="match_parent"
			            android:layout_height="wrap_content"
					    android:orientation="horizontal"
					    android:gravity="end">
					    <Button
					        android:id="@+id/add_email_checkbox"
					        android:layout_width="wrap_content"
					        android:layout_height="40dp"
					        android:layout_marginTop="8dp"
					        android:background="@drawable/login_button_selector"
					        android:paddingBottom="7dp"
					        android:paddingLeft="20dp"
					        android:paddingRight="20dp"
					        android:paddingTop="7dp"
					        android:text="Add buddy"
					        android:textColor="@drawable/login_button_text_selector" />

					</LinearLayout>
				</LinearLayout>
			</LinearLayout>
		</LinearLayout>
		
	</RelativeLayout>
</ScrollView>