<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >
    <TextView
        android:id="@+id/title"
        android:textColor="@color/dark_grey"
        android:layout_width="300dp"
		android:layout_height="wrap_content"
		android:paddingTop="5dp"
		android:paddingLeft="10dp"
		android:paddingBottom="5dp"
        android:textSize="30sp"
        android:background="@drawable/tab_title_background" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/tab_body_background" >
        
        <EditText
	        android:id="@+id/duration"
	        android:layout_width="wrap_content"
	        android:layout_height="wrap_content"
	        android:gravity="center"
	        android:textSize="30sp"
	        android:paddingTop="10dp"
	        android:paddingBottom="10dp"
	        android:inputType="number"
	        android:hint="@string/duration_hint"
	        android:background="@drawable/tab_body_background" />
        
        <TextView
            android:id="@+id/min_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/duration_label"
            android:textSize="20sp"
            android:textColor="@color/dark_grey"
            android:layout_gravity="center" />
        
    </LinearLayout>
    
    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="horizontal" >
        <Button
	        android:id="@+id/cancel"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="wrap_content"
	        android:textColor="@color/white"
	        android:layout_marginRight="1dp"
	        android:paddingTop="15dp"
	        android:paddingBottom="15dp"
	        android:background="@drawable/edit_save_button_selector" />
	    <Button
	        android:id="@+id/save"
	        android:layout_width="0dp"
	        android:layout_weight="1"
	        android:layout_height="match_parent"
	        android:textColor="@color/white"
	        android:background="@drawable/edit_save_button_selector" />
    </LinearLayout>    
</LinearLayout>