<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/scollview"
	android:layout_width="match_parent"
	android:layout_height="wrap_content">
	<RelativeLayout
	    android:id="@+id/parent_rl"
	    android:layout_height="match_parent"
	    android:layout_width="wrap_content">
	    <RelativeLayout
	        android:id="@+id/myBuddies_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
	        <TextView
		        android:id="@+id/myBuddies"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="My buddies"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"/>
	    </RelativeLayout>
	    <com.diveboard.util.ExpandableHeightGridView
		    android:layout_below="@id/myBuddies_rl"
		    android:id="@+id/gridViewBuddies"
		    style="@style/PhotoGridLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:columnWidth="@dimen/image_thumbnail_size"
		    android:horizontalSpacing="@dimen/image_thumbnail_spacing"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="@dimen/image_thumbnail_spacing" />
		<RelativeLayout
		    android:layout_below="@id/gridViewBuddies"
	        android:id="@+id/myOldBuddies_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
			<TextView
		        android:id="@+id/myOldBuddies"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="Add one of your past dive buddies"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"
		        />
		</RelativeLayout>
		<com.diveboard.util.ExpandableHeightGridView
		    android:layout_below="@id/myOldBuddies_rl"
		    android:id="@+id/gridView"
		    style="@style/PhotoGridLayout"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:columnWidth="@dimen/image_thumbnail_size"
		    android:horizontalSpacing="@dimen/image_thumbnail_spacing"
		    android:numColumns="auto_fit"
		    android:stretchMode="columnWidth"
		    android:verticalSpacing="@dimen/image_thumbnail_spacing" />
		<RelativeLayout
		    android:layout_below="@id/gridView"
	        android:id="@+id/search_rl"
	        android:layout_width="match_parent"
	        android:layout_height="30dp"
	        android:gravity="center">
			<TextView
		        android:id="@+id/search"
		        android:layout_height="wrap_content"
		        android:layout_width="wrap_content"
		        android:text="Or search and add buddies from"
		        android:textColor="@color/dark_grey"
		        android:layout_centerHorizontal="true"
		        />
		</RelativeLayout>
		<Spinner 
		    android:id="@+id/spinner"
		    android:layout_below="@id/search_rl"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    />
		<LinearLayout
		    android:id="@+id/search_diveboard"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:layout_below="@id/spinner"
		    android:orientation="horizontal"
		    android:visibility="visible">

			<LinearLayout
			    android:layout_width="0dp"
			    android:layout_height="wrap_content"
			    android:layout_weight="0.5"
			    android:gravity="end"
			    android:layout_gravity="center_vertical"
			    android:orientation="horizontal" >

			    <TextView
			        android:id="@+id/diveboard_text"
			        android:layout_width="wrap_content"
			        android:layout_height="wrap_content"
			        android:text="Add a Diveboard buddy" />

		    </LinearLayout>
		    <LinearLayout
			    android:layout_weight="0.5"
			    android:layout_height="wrap_content"
			    android:layout_width="0dp"
			    android:orientation="horizontal">
			    <EditText
			        android:id="@+id/diveboard_edit"
			        android:layout_height="wrap_content"
			        android:layout_width="match_parent"/>
			</LinearLayout>
		</LinearLayout>
	</RelativeLayout>
</ScrollView>