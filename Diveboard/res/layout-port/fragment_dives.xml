<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal">
	<RelativeLayout
        android:id="@+id/fragment_banner_height"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/yellow"
        android:gravity="center_vertical"
        android:onClick="goToEditDive">
        <TextView
            android:id="@+id/trip_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:id="@+id/trip_name2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/trip_name"
            android:layout_alignLeft="@id/trip_name"/>
   </RelativeLayout>
   <LinearLayout
       	android:orientation="vertical"
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="false"
        android:layout_centerVertical="false"
        android:background="#FFFFFF"
        android:gravity="center_horizontal"
		android:onClick="goToEditDive">
        
		<RelativeLayout
            android:id="@+id/fragment_body"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#ffffff"
            android:gravity="center_horizontal"
            android:onClick="goToEditDive">
	        <ImageView
	            android:id="@+id/main_image"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:scaleType="centerCrop"
	            >
	        </ImageView>
	        <ImageView
	            android:id="@+id/main_image_cache"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_marginTop="0dp">
	        </ImageView>         
	    </RelativeLayout>
	    <RelativeLayout
            android:id="@+id/fragment_body_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:gravity="center_horizontal"
            android:onClick="goToEditDive">
            <TextView
                android:id="@+id/dive_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentTop="true"
                android:singleLine="true"
                android:ellipsize="end"/>
            <TextView
                android:id="@+id/dive_place"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/dive_name"
                android:singleLine="true"
                android:ellipsize="end"
                android:layout_marginTop="5dp"/>
            <TextView
                android:id="@+id/dive_date"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/dive_duration"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true"/>
            <TextView
                android:id="@+id/dive_maxdepth"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"/>
	    	</RelativeLayout>
	    	<RelativeLayout
	    	    android:orientation="horizontal"
	    	    android:id="@+id/fragment_picture_circle_radius"
	    	    android:layout_width="match_parent"
	    	    android:layout_height="0dp"
	    	    android:gravity="center">
            </RelativeLayout>
    </LinearLayout>
    <RelativeLayout
        android:id="@+id/fragment_profile"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
	    <RelativeLayout
	        android:id="@+id/fragment_profile_bar"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content">
	        <ImageView
	            android:id="@+id/profile_image"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"/>
	        <LinearLayout
	            android:id="@+id/profile_info"
	            android:orientation="vertical"
	            android:layout_width="wrap_content"
	            android:layout_height="wrap_content"
	            android:layout_toRightOf="@id/profile_image"
	            android:layout_centerVertical="true">
		        <TextView
		                android:id="@+id/logged_by"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#ffffff"/>
		        <TextView
		                android:id="@+id/user_name"
		                android:layout_width="wrap_content"
		                android:layout_height="wrap_content"
		                android:textColor="#ffffff"/>
		    </LinearLayout>
	   	</RelativeLayout>
   	</RelativeLayout>
</RelativeLayout>