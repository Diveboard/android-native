<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.diveboard.mobile"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="16" />

    <application
        android:name="com.diveboard.mobile.ApplicationController"
        android:allowBackup="true"
        android:debuggable="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:theme="@style/AppBaseTheme" >
        <activity
            android:name="com.diveboard.mobile.DivesActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.diveboard.mobile.GalleryCarouselActivity"
            android:label="@string/app_name" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.EditDiveActivity"
            android:label="@string/title_activity_edit_dive" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.TabEditDetailsActivity"
            android:label="@string/title_activity_edit_dive" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.TabEditNotesActivity"
            android:label="@string/title_activity_edit_dive" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.TabEditGearActivity"
            android:label="@string/title_activity_edit_dive" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.DiveDetailsActivity"
            android:label="@string/title_activity_dive_details" >
        </activity>
        <activity
            android:name="com.diveboard.mobile.DiveDetailsMainActivity"
            android:label="@string/title_activity_dive_details_main" >
        </activity>
    </application>

</manifest>
